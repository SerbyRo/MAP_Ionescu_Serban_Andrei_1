@model MAP_Ionescu_Serban_Andrei.Models.Baller

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Baller</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BallerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BallerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Team)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Team.TeamID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TShirtNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TShirtNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GamePlanes)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Coach</th>
                    <th>Plan Number</th>
                    <th>Description Strategy</th>
                    <th>Used quarter</th>
                </tr>
                @foreach (var item in Model.GamePlanes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Coach.CoachName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlanNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescriptionStrategy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.usedQuarter)
                        </td>

                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.BallerID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
